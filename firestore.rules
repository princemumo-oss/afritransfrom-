rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    match /global_posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update(postId): if request.auth != null && resource.data.authorId == request.auth.uid;
    }
    
    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /friend_requests/{friendRequestId} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId}/chats/{chatId}/messages/{messageId} {
        allow read, write: if request.auth != null; // Simplified for now
    }
    
    match /calls/{callId} {
       allow read, write: if request.auth != null;
    }
    
    match /stories/{storyId} {
       allow read, write: if request.auth != null;
    }
  }
}

    